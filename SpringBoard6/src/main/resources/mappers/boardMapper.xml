<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.BoardMapper">
   <!-- 사용할 데이터타입 설정 -->
   <resultMap type="com.itwillbs.domain.BoardVO" id="board">
   	 <id property="bno" column="bno"/>
   	 <result property="bno" column="bno"/>
   	 <result property="title" column="title"/>
   	 <result property="content" column="content"/>
   	 <result property="writer" column="writer"/>
   	 <result property="viewcnt" column="viewcnt"/>
   	 <result property="regdate" column="regdate"/>  
   </resultMap>
  


  
  <!-- 글쓰기(insert) -->
  <insert id="insertBoard">
	 insert into tbl_board(title,writer,content) 	
	 values(#{title},#{writer},#{content}) 	
  </insert>  
  <!-- 글쓰기(insert) -->
  
  <!-- 글 목록 조회(select) -->
  <select id="listAll" resultType="com.itwillbs.domain.BoardVO" 
          resultMap="board">
  	 select * from tbl_board  
  </select>
  <!-- 글 목록 조회(select) -->
  
  
  <!-- 글 정보 조회(select) -->
  <select id="getBoard" resultType="BoardVO">
  	select * from tbl_board  
  	where bno = #{bno}  
  </select>
  <!-- 글 정보 조회(select) -->
  
  <!-- 글 조회수 1증가(update) -->
  <update id="increseViewcnt">
  	update tbl_board set viewcnt = viewcnt + 1 
  	where bno = #{bno}
  </update>
  <!-- 글 조회수 1증가(update) -->
  
  
  <!-- 글정보 수정 (update)-->
  <update id="updateBoard">
  	 update tbl_board set title=#{title}, content=#{content}, writer=#{writer} 
  	 where bno = #{bno}  
  </update>	
  <!-- 글정보 수정 (update)-->
  
  <!-- 글정보 삭제 (delete) -->
  <delete id="deleteBoard" >
  	  delete from tbl_board 
  	  where bno = #{bno}  		
  </delete>  
  <!-- 글정보 삭제 (delete) -->
  
  
  
  <!-- 글 목록 조회(select+page) -->
  <select id="listPage" resultType="com.itwillbs.domain.BoardVO" 
          resultMap="board">
     <![CDATA[     
  	 select * from tbl_board 
  	 where bno > 0 
  	 order by bno desc, regdate desc
  	 limit #{startPage},#{pageSize}
  	 ]]> 
  </select>
  <!-- 글 목록 조회(select+page) -->
  
  <!-- 페이징처리 총 글개수 -->
  <select id="pageCnt"  resultType="int">
  	 select count(bno) from tbl_board  
  </select>
  
  
  
  
</mapper>
